#!/bin/bash

function announce {
    bold=$(tput bold)
    normal=$(tput sgr0)

    echo
    echo "${bold}${1}${normal}"
    echo
}

function command_exists {
    command -v $1 >/dev/null 2>&1
    return $?
}

# Software Update (macOS)
if command_exists softwareupdate; then
    announce "ğŸ Upgrading macOS"

    sudo softwareupdate -i -a
fi

# Linux-specific
if [[ "$OSTYPE" == *"linux-gnu"* ]]; then
    if command_exists apt; then
        announce "ğŸ”® Upgrading Apt"

        sudo apt update
        sudo apt upgrade
        sudo apt autoremove
    elif command_exists apt-get; then
        announce "ğŸ”® Upgrading Apt Get"

        sudo apt-get update
        sudo apt-get upgrade
        sudo apt-get autoremove
    elif command_exists pacman; then
        announce "âš«ï¸ Upgrading Pacman"
        sudo pacman -Syu
    fi

    if command_exists snap; then
        announce "ğŸ‘†ï¸ Upgrading Snap"
        sudo snap refresh
    fi
fi

# Homebrew (macOS)
if command_exists brew; then
    announce "ğŸº Upgrading Homebrew"

    brew update
    brew upgrade
    brew upgrade --cask
    brew cleanup
fi

# Ruby Gems
if command_exists gem; then
    announce "ğŸ’ Upgrading Ruby Gems"

    gem update --system
    gem update
fi

# Rust
if command_exists rustup; then
    announce "ğŸ”¨ Upgrading Rust"

    rustup self update
    rustup update
fi

